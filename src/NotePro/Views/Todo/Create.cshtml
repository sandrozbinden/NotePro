@model NotePro.Models.TodoViewModels.NewTodoViewModel

@{
    ViewData["Title"] = "View";
}

<div id="content">
    <form asp-action="Create" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#content">
        <div class="form-horizontal">
            <h1>New Todo</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control"/>

                    <span asp-validation-for="Title" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
<script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}